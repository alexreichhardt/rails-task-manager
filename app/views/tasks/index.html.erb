<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<ol>
  <% @tasks.each do |task| %>
    <ul>
      <li>Title: <%=task.title %></li>
      <li>Details: <%=task.details %></li>
      <li>Completed: <%=task.completed %></li>
      <li><%= link_to "Show", task_path(task),
              method: :get,
              data: { confirm: "Are you sure?" } %>
      <%= link_to "Edit", edit_task_path(task),
              method: :get,
              data: { confirm: "Are you sure?" } %>
      <%= link_to "Delete", task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %></li>
    </ul>
  <%end%>
  <%= link_to "Create New", new_task_path,
              method: :get%>
</ol>

